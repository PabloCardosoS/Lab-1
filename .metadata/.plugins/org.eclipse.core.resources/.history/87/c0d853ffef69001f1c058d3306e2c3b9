package whilelista12;

import java.util.Scanner;

public class Ex012 {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		double n = 1;
		double soma, media = 0;
		int c = 1;
	
		while (n > 0) {
			System.out.println("Digite um n√∫mero positivo: ");
			double n = scanner.nextDouble();
			soma += n;
			media = soma / c;
			c++;
			
			if (n < 0) {
				soma =+ n;
			}
		} 
			
		
			
		
	}
	
}
