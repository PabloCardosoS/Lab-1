package ex.avancado002;

import java.util.Scanner;

public class EqSegundoGrau {

	public static void main(String[] args) {
		
		Scanner scanner = new Scanner(System.in);
		System.out.println("Digite o A da equação: ");
		int a = scanner.nextInt();
		System.out.println("Digite o B da equação: ");
		int b = scanner.nextInt();
		System.out.println("Digite o C da equação: ");
		int c = scanner.nextInt();
		
		double delta = Math.pow(b, 2) - 4 * a * c;
		double x1, x2;
		
		if (delta <= 0) {
			System.out.println("Não existem raízes reais.");
		} else if (delta == 0) {
			x1 = -b / (2 * a);
		} else {
			x1 = (double) ((-b + Math.sqrt(delta, 2)) / (2 * a));
			x2 = (double) ((-b + Math.sqrt(delta, 2)) / (2 * a));
		}
		
		System.out.println("As raízes são: " + x1 " e " + x2);

		
	}

}
