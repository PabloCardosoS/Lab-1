package whilelista6;

import java.util.Locale;
import java.util.Scanner;

public class Ex006 {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		scanner.useLocale(Locale.ENGLISH);
		int i = 1;
		String n = "";
		while (i <= 20) {
			System.out.print("Digite o " + i + "° número real: ");
			String num = Double.toString(scanner.nextDouble());
			n += num;
			i++;
			
			break;
		}


	}

}
